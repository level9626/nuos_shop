doctype html
html
  head
    title Nuos Shop
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
    div#banner
      = @page_title || 'Bookshelf'
    div#columns
      div#side
        ul
          = hidden_div_if(@cart.line_items.empty?, id: 'cart') do
            == render @cart
          li
            a href='/' Home
      div#main
        = yield
